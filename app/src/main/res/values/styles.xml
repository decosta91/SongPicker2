<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/purple_secondary</item>
        <item name="colorPrimary">@color/purple_primary</item>
        <item name="colorPrimaryDark">@color/purple_primary_dark</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="searchViewStyle">@style/AppTheme.SearchView</item>
    </style>

    <style name="AppTheme.SearchView" parent="Widget.AppCompat.Light.SearchView">
        <item name="queryBackground">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorControlNormal">@color/white</item>

    </style>

    <color name="white">#ffffff</color>
    <color name="black">#000000</color>
</resources>
